<% include partials/header.ejs %>
<div class="container">
    <div class="table-wrapper">
      <h4 class="bg-grey">Viviendas:</h4>
        <% if (viviendas.length > 0) {%>
            <table class="table table-striped table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Comunidad</th>
                        <th scope="col">ID</th>
                        <th scope="col">Número</th>
                        <th scope="col">Coeficiente</th>
                        <th scope="col">
                          <!-- <a href="/viviendas/0" class="btn btn-sm btn-primary">Añadir</a> -->
                        </th>
                    </tr>
                </thead>
                <tbody>
                  <% var thisCom = 0 %>
                    <% Array.prototype.forEach.call(viviendas, vivienda => { %>
                      <% if (thisCom != vivienda.comunidad_fk){ %>
                        <tr class="success">
                          <td>
                            <%= vivienda.nombre_comunidad %>
                          </td>
                          <td>
                            ID: <%= vivienda.comunidad_fk %>
                          </td>
                          <td></td>
                          <td></td>
                          <td>
                            <a href="/comunidades/<%= vivienda.comunidad_fk %>" data-method="get" class="btn btn-sm btn-primary">
                              <span class="glyphicon glyphicon-eye-open"></span>
                            </a>
                          </td>
                        </tr>
                        <% thisCom = vivienda.comunidad_fk } %>
                        <tr>
                            <td></td>
                            <th scope="row"><%= vivienda.id_vivienda %></th>
                            <td><%= vivienda.numero %></td>
                            <td><%= vivienda.coeficiente %>%</td>
                            <td>
                                <a href="/comunidades/<%= vivienda.comunidad_fk %>/viviendas/<%= vivienda.id_vivienda %>" rel="noopener" class="btn btn-sm btn-success">Editar</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No viviendas found. Go <a href="/add" >here</a> to add viviendas.</p>
        <% } %>
    </div>
</div>
<% include partials/footer.ejs %>
