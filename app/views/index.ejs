<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (comunidades.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Dirección</th>
                        <th scope="col">CP</th>
                        <th scope="col">Población</th>
                        <th scope="col">Provincia</th>
                    </tr>
                </thead>
                <tbody>
                    <% Array.prototype.forEach.call(comunidades, comunidad => { %>
                        <tr>
                            <th scope="row"><%= comunidad.id %></th>
                            <td><%= comunidad.nombre_comunidad %></td>
                            <td><%= comunidad.direccion %></td>
                            <td><%= comunidad.cp %></td>
                            <td><%= comunidad.poblacion %></td>
                            <td><%= comunidad.prpovincia %></td>
                            <td>
                                <a href="/edit/<%= comunidad.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= comunidad.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No comunidades found. Go <a href="/add" >here</a> to add comunidades.</p>
        <% } %>
    </div>
</div>
</body>
</html>
