<% include partials/header.ejs %>
<div class="container">
        <p class="text-center text-danger">Editando vivienda</p>
    <% if (vivienda){ %>
      <% if (vivienda.id_vivienda == 0){ %>
        <form class="add-player-form" action="/viviendas" method="post" enctype="application/json">
      <% } else { %>
        <form class="add-player-form" action="/viviendas/<%= vivienda.id_vivienda %>" method="post" enctype="application/json">
      <% } %>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="id_vivienda">ID</label>
                    <input type="text" class="form-control" name="id_vivienda" id="id_vivienda" value="<%= vivienda.id_vivienda %>" required readonly title="ID cannot be edited.">
                </div>
                <div class="form-group col-md-6">
                    <label for="numero">NÃºmero</label>
                    <input type="text" class="form-control" name="numero" id="numero" value="<%= vivienda.numero %>" required>
                </div>
            </div>
            <div align="center">
              <!-- <a href="/" rel="noopener" class="btn btn-sm btn-success">Guardar</a> -->
              <button formmethod="post" type="submit" class="btn btn-success float-right">Guardar</button>
              <a href="/viviendas" class="btn btn-sm btn-danger">Cancelar</a>
            </div>
        </form>
          <% if (vivienda.id_vivienda != null){ %>
            <%  include tables/tablaPropietarios.ejs %>
            <%  include tables/tablaCuotas.ejs %>
          <% } %>
    <% } else { %>
        <p class="text-center">Not Found. Go <a href="/add">here</a> to add viviendas.</p>
    <% } %>
</div>
<% include partials/footer.ejs %>
