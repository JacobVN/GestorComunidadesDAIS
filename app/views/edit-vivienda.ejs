<% include partials/header.ejs %>
<div class="container">
        <p class="text-center text-danger">Editando vivienda</p>
    <% if (vivienda){ %>
      <% if (vivienda.id_vivienda){ %>
        <form class="add-player-form" action="/comunidades/<%= vivienda.comunidad_fk %>/viviendas/<%= vivienda.id_vivienda %>" method="post" enctype="application/json">
      <% } else { %>
        <form class="add-player-form" action="/comunidades/<%= comunidad_fk %>/viviendas" method="post" enctype="application/json">
      <% } %>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="id_vivienda">ID</label>
                    <input type="text" class="form-control" name="id_vivienda" id="id_vivienda" value="<%= vivienda.id_vivienda %>" required readonly title="ID cannot be edited.">
                </div>
                <div class="form-group col-md-3">
                    <label for="numero">NÃºmero</label>
                    <input type="text" class="form-control" name="numero" id="numero" value="<%= vivienda.numero %>" required>
                </div>
                <div class="form-group col-md-3">
                    <label for="coeficiente">Coeficiente</label>
                    <input type="text" class="form-control" name="coeficiente" id="coeficiente" value="<%= vivienda.coeficiente %>" required>
                </div>
                <div class="form-group col-md-3">
                    <label for="comunidad_fk">Comunidad</label>
                    <input type="text" class="form-control" name="comunidad_fk" id="comunidad_fk" value="<%= comunidad_fk %>" required readonly title="ID cannot be edited.">
                </div>
            </div>
            <div align="center" class="form-row">
              <!-- <a href="/" rel="noopener" class="btn btn-sm btn-success">Guardar</a> -->
              <button formmethod="post" type="submit" class="btn btn-success float-right">Guardar</button>
              <a href="/comunidades/<%= vivienda.comunidad_fk %>" class="btn btn-sm btn-info">Vovler</a>
              <a href="/viviendas/delete/<%= vivienda.id_vivienda %>" data-method="delete" class="btn btn-sm btn-danger">Eliminar</a>
            </div>
        </form>
        @ToDo: Datos Comunidad
          <% if (vivienda.id_vivienda){ %>
            <%  include tables/tablaPropietarios.ejs %>
            <%  include tables/tablaCuotas.ejs %>
          <% } %>
    <% } else { %>
        <p class="text-center">Not Found. Go <a href="/add">here</a> to add viviendas.</p>
    <% } %>
</div>
<% include partials/footer.ejs %>
