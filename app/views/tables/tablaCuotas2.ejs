<div class="container">
  <div class="table-wrapper">
    <h4 class="bg-grey">Cuotas: (version en proceso)</h4>

        <label for="">Año:</label>
        <div class="form-row">
            <div class="form-group col-md-2">
                <input type="number" min="1900" max="2099" value="<%= year %>" step="1" class="form-control" name="año" id="año" maxlength="4">
            </div>
            <div class="form-group col-md-2">
              <span id="filtCuota" name="filtCuota" class="glyphicon glyphicon-search btn btn-sm btn-info" onclick="test()"></span>
            </div>
        </div>
    <% var deudaAc = 0 %>
    <table class="table table-hovered">
      <thead class="thead-dark">
        <tr>
          <% Array.prototype.forEach.call(cuotas, cuota => { %>
            <th> <%= (new Date(cuota.fecha)).toLocaleString('en-GB', { month: 'long' }) %> </th>
          <% }) %>
          <!-- <th scope="col">
            <a href="/viviendas/<%= vivienda.id_vivienda %>/cuotas/0" class="btn btn-sm btn-success">Añadir</a>
          </th> -->
        </tr>
      </thead>
      <% if (cuotas.length > 0) {%>
      <tbody>
      <tr>
        <% Array.prototype.forEach.call(cuotas, cuota => { %>
          <% if(cuota.pagado){ %>
            <td class="success text-info"><%= cuota.importe %> € <a href="/viviendas/<%= vivienda.id_vivienda %>/cuotas/<%= cuota.id_cuota %>" rel="noopener" class="glyphicon glyphicon-eye-open"></a>
          </td>
          <% } else { %>
            <% deudaAc += cuota.importe; %>
            <td class="danger text-danger"><%= cuota.importe %> € <a href="/viviendas/<%= vivienda.id_vivienda %>/cuotas/<%= cuota.id_cuota %>" rel="noopener" class="glyphicon glyphicon-eye-open"></a>
          </td>
          <% } %>
        <% }) %>
        <tr>
          <td colspan="4">Deuda pendiente: <%= deudaAc %> €</td>
          <td colspan="4">Deuda anterior: <%= deuda %> €</td>
          <td colspan="4">Deuda total: <%= deudaAc + deuda %> €</td>
        </tr>
      </tbody>

      <% } else { %>
      <tr>
        <td colspan="10">
          <p class="text-center">No hay cuotas asignadas a esta vivienda.</p>
        </td>
      </tr>
      <% } %>
      <tfoot></tfoot>
    </table>
  </div>

  <script type="text/javascript">
    function test() {
      var x = document.getElementById("año").value;
      location.href = "/viviendas/<%= vivienda.id_vivienda %>/"+x;
    }
  </script>
</div>
