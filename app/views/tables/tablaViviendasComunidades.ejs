<div class="container">
    <div class="table-wrapper">
      <h4 class="bg-grey">Viviendas:</h4>
        <% if (viviendas.length > 0) {%>
            <table class="table table-striped table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Comunidad</th>
                        <th scope="col">Número</th>
                        <th scope="col">Coeficiente</th>
                        <th scope="col" colspan="2">
                          <!-- <a href="/comunidades/:idComunidad/viviendas/0" class="btn btn-sm btn-primary">Añadir</a> -->
                        </th>
                    </tr>
                </thead>
                <tbody>
                  <% var thisCom = 0 %>
                    <% Array.prototype.forEach.call(viviendas, vivienda => { %>
                      <% if (thisCom != vivienda.id_comunidad){ %>
                        <tr class="success">
                          <td>
                            <%= vivienda.id_comunidad %>
                          </td>
                          <th colspan="4">
                            <%= vivienda.nombre_comunidad %>
                          </th>
                          <td>
                            <a href="/comunidades/<%= vivienda.id_comunidad %>" data-method="get" class="btn btn-sm btn-primary">
                              Ver
                            </a>
                          </td>
                        </tr>
                        <% thisCom = vivienda.id_comunidad } %>
                        <% if (vivienda.id_vivienda) { %>
                        <tr>
                          <td></td>
                            <td><%= vivienda.id_vivienda %></td>
                            <td><%= vivienda.numero %></td>
                            <td><%= vivienda.coeficiente %>%</td>
                            <td>
                              <a href="/viviendas/<%= vivienda.id_vivienda %>" rel="noopener" class="btn btn-sm btn-info hidden-print">Ver</a>
                            </td>
                            <td></td>
                        </tr>
                        <% } %>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No viviendas found. Go <a href="/add" >here</a> to add viviendas.</p>
        <% } %>
    </div>
</div>
